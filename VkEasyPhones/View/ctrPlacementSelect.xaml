<UserControl x:Class="VkEasyPhones.View.ctrPlacementSelect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
						 xmlns:constants="clr-namespace:VkEasyPhones.Constants"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
	<UserControl.Resources>
		<Style x:Key="cmbStylePlacement" TargetType="ComboBox">
			<Setter Property="Height" Value="30"></Setter>
		</Style>
	</UserControl.Resources>
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition></RowDefinition>
			<RowDefinition></RowDefinition>
			<RowDefinition></RowDefinition>
			<RowDefinition></RowDefinition>
		</Grid.RowDefinitions>
		<TextBlock Text="{x:Static constants:Translates.Countries }"></TextBlock>
		<ComboBox Grid.Row="1" 
							DataContext="{Binding Countries}"
							Style="{StaticResource cmbStylePlacement}"></ComboBox>
		<TextBlock Grid.Row="2" 
							 Text="{x:Static constants:Translates.Towns }"></TextBlock>
		<ComboBox Grid.Row="3" 
							DataContext="{Binding Towns}"
							Style="{StaticResource cmbStylePlacement}"></ComboBox>
    </Grid>
</UserControl>
