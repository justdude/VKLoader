<Window x:Class="VkEasyPhones.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModel="clr-namespace:VkEasyPhones.ViewModel"
				xmlns:local="clr-namespace:VkEasyPhones.View"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="30"></RowDefinition>
			<RowDefinition Height="120"></RowDefinition>
			<RowDefinition></RowDefinition>
		</Grid.RowDefinitions>
			<StackPanel>
				<TextBlock>VKontakte phones</TextBlock>
			</StackPanel>
			<local:ctrPlacementSelect Grid.Row="1" 
																Height="100"></local:ctrPlacementSelect>
		<Grid Grid.Row="2"
						VerticalAlignment="Stretch">
			<Grid.RowDefinitions>
				<RowDefinition></RowDefinition>
				<RowDefinition></RowDefinition>
			</Grid.RowDefinitions>
			<StackPanel Grid.Row="0" Orientation="Horizontal">
				<Button Width="140"
								Height="30"
								Command="{Binding AutorizeClick}"
								Content="Autorize"/>
				<Button Width="140"
								Height="30"
								Command="{Binding SearchClick}"
								Content="SearchClick"/>
			</StackPanel>


			<ListBox Grid.Row="1"
							 DataContext="{Binding Peoples}"></ListBox>

		</Grid>
			
	</Grid>
</Window>
