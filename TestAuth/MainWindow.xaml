<Window x:Class="TestAuth.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="190" Width="260">
    <Grid>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition></ColumnDefinition>
				<ColumnDefinition></ColumnDefinition>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition></RowDefinition>
				<RowDefinition></RowDefinition>
				<RowDefinition></RowDefinition>
			</Grid.RowDefinitions>
			<TextBlock Text="Name"></TextBlock>
			<TextBox Grid.Column="1" Name="txtName"></TextBox>
			<TextBlock Grid.Row="1" Text="Password"></TextBlock>
			<TextBox Grid.Row="1" Grid.Column="1" Name="txtPass"></TextBox>
			<Button Grid.Row="2" Grid.Column="1" Name="btnAutorize" Click="btnAutorize_Click">Login</Button>
		</Grid>
    </Grid>
</Window>
