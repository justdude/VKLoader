<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:metro="http://schemas.codeplex.com/elysium"
  xmlns:windows="clr-namespace:vkontakte">

	<Style x:Key="EmptyButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Static metro:Window.DefaultCaptionButtonStyleKey}}"> 
				 <!--BasedOn="{StaticResource {x:Type Button}}"-->
		<Setter Property="Background" Value="Transparent"></Setter>
		<Setter Property="BorderBrush" Value="Transparent"></Setter>
		<Style.Triggers>
			<Trigger Property="IsPressed" Value="true">
				<Setter Property = "RenderTransform">
					<Setter.Value>
						<ScaleTransform ScaleX="0.96" ScaleY="0.96"/>
					</Setter.Value>
				</Setter>
			</Trigger>
		</Style.Triggers>
	</Style>

